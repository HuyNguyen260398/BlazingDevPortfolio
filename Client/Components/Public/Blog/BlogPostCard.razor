<div class="card shadow mb-4">
    <img src="@($"{ApiEndpoints.ServerBaseUrl}/{Post.ThumbnailImagePath}")" class="card-img-top" alt="post thumbnail image" />
    <div class="card-body">
        <h3 class="card-title">@Post.Title</h3>
        <p class="text-muted">By @Post.Author on @Post.PublishDate</p>
        <p class="card-text">@(string.Join(" ", Post.Excerpt.Split().Take(25).ToArray()))...</p>
    </div>
    <a href="@($"/blog/{Category.Name.ConvertTitleToURL().ToLowerInvariant()}/{Post.Title.ConvertTitleToURL().ToLowerInvariant()}")" class="btn btn-primary stretched-link md-f-size-1-5">
        <i class="fas fa-book"></i> View Post
    </a>
</div>

@code 
{
    [Parameter]
    public Category Category { get; set; }

    [Parameter]
    public Post Post{ get; set; }
}