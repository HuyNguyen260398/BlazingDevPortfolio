<div class="card shadow mb-4">
    <img src="@($"{ApiEndpoints.ServerBaseUrl}/{Category.ThumbnailImagePath}")" class="card-img-top" alt="category thumbnail image" />
    <div class="card-body">
        <h3 class="card-title">@Category.Name</h3>
        <p class="card-text">@Category.Description</p>
    </div>
    <a href="@($"/blog/{Category.Name.ConvertTitleToURL().ToLowerInvariant()}")" class="btn btn-primary stretched-link md-f-size-1-5">
        <i class="fas fa-mail-bulk"></i> View Post
    </a>
</div>

@code 
{
    [Parameter]
    public Category Category { get; set; }
}